<%- include('../partials/header.ejs'); %>

<!-- Content for the Add page -->

<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter book title"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control"
                    id="priceTextField"
                    placeholder="Enter price"
                    name="price" required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Author</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter author name"
                    name="author" required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextField">Genre</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter book genre"
                    name="genre" required></textarea>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                    <a href="/book-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i>Cancel</a>
            </form>
        </div>

    </div>
</div>

<div class="offset-md-1 col-md-11"></div>


<%- include('../partials/footer.ejs'); %>